  <script type="text/javascript">
    $(document).ready(function(){
      $("#sentSaran").click(function(){
        if($("#name").val().trim() !== '' && $("#saran").val().trim() !== ''){
          $(".invalid-feedback").hide();
          // console.log($("#name").val())
          // console.log($("#saran").val())

          $.LoadingOverlay("show");
          $.ajax({
            url: "saran/postSaran",
            type: "POST",
            dataType: "json",
            data: {
              name: $("#name").val(),
              saran: $("#saran").val()
            },
            success: function(ress) {
              if(ress.response == "Successful"){
                $.LoadingOverlay("hide");
                $('#modalrespon').modal('show');
                var modalrespon = document.getElementById('modalrespon')
                modalrespon.addEventListener('hidden.bs.modal', function (event) {
                  window.location.reload();
                })
                // window.location.reload();
              }else{
                $.LoadingOverlay("hide");
                window.location.reload();
              }
            },
            error: function(err, data) {
              $.LoadingOverlay("hide");
              window.location.reload();
            },
          });
        }else{
          $(".invalid-feedback").show()
        }
      });
    });
  </script>
