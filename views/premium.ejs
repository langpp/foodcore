<!doctype html>
<html lang="en">
<%- include("./template/css.ejs") %>
<body>
  <header class="header__section">
    <%- include("./template/login_info.ejs") %>
    <div class="main__header main__header2 header__sticky sticky" style="margin-top: 36px;">
      <div class="container">
        <div class="main__header--inner position__relative d-flex justify-content-between align-items-center">
          <div class="offcanvas__header--menu__open ">
            <a class="offcanvas__header--menu__open--btn" href="javascript:void(0)" data-offcanvas>
            </a>
          </div>
          <%- include("./template/header_menu.ejs") %>
        </div>
      </div>
    </div>
    <%- include("./template/toolbar.ejs") %>
    <%- include("./template/search_box.ejs") %>
    <%- include("./template/card.ejs") %>
  </header>
	<!-- End header area -->
	<main class="main__content_wrapper">
    <!-- Start product section -->
    <section class="product__section section--padding mt-100">
      <div class="container">
        <div class="col-lg-12 mt-3">
          <nav>
            <ol class="cd-breadcrumb custom-separator">
              <li><a href="javascript:void(0)">Home</a></li>
              <li class="current"><em>Menu Premium</em></li>
            </ol>
          </nav>
        </div>
        <div class="product__section--inner">
          <div class="row row-cols-lg-4 row-cols-md-3 row-cols-2 mb--n28">
            <% data_paket.forEach(function (item, index) { %> 
              <div class="col-lg-3 col-md-4 col-sm-6 col-6 mb-3">
                <div class="product__items ">
                  <div class="product__items--thumbnail">
                    <a class="product__items--link modal-description" href="javascript:void(0)">
                    <img class="product__items--img product__primary--img" src="/img/product/<%- item.image1 %>" alt="product-img">
                    <img class="product__items--img product__secondary--img" src="/img/product/<%- item.image2 %>" alt="product-img">
                    </a>
                    <div class="product__badge">
                      <span class="product__badge--items sale">Rp <%- item.rateThousand %></span>
                    </div>
                    <span class="product__love"><i class="fas fa-heart"></i></span>
                  </div>
                  <div class="product__items--content d-flex justify-content-between align-items-center">
                    <h3 class="product__items--content__title h4">
                      <a class="modal-description" href="javascript:void(0)"><%- item.name %></a>
                    </h3>
                    <button class="addPaket btn btn-primary btn-sm minicart__open--btn" href="javascript:void(0)" paketID="<%- item.id %>" paketName="<%- item.name %>" paketRate="<%- item.rate %>" paketRateThousand="<%- item.rateThousand %>" image1="<%- item.image1 %>" image2="<%- item.image2 %>" data-offcanvas>+</button>
                  </div>
                </div>
              </div>
            <% }) %> 
          </div>
        </div>
      </div>
    </section>
    <!-- End product section -->
  </main>
  <%- include("./template/footer.ejs") %>
  <%- include("./template/js.ejs") %>
</body>
</html>